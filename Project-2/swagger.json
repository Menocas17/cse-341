{
  "swagger": "2.0",
  "info": {
    "title": "Meal Planner API for the CSE341 project",
    "description": "This API allows you to create and manage meal plans as an user and to manage user as an admin",
    "version": "1.0.0"
  },
  "host": "cse-341-project-2-cdw3.onrender.com",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/": {
      "get": {
        "description": "This is the base index path, in this path you are goint to get a descriptive message of what the api does",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/get-all-users": {
      "get": {
        "description": "This endpoint will get a list of all the users, in the databse, this endpoint is meant to be use only for admins in future updates",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "description": "This endpoint will create a new user in the data base",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "AnyTest"
                },
                "lastName": {
                  "example": "AnyTest"
                },
                "birthday": {
                  "example": "2000-01-01"
                },
                "email": {
                  "example": "avalidemail@email.com"
                },
                "phoneNumber": {
                  "example": "505 12345678"
                },
                "password": {
                  "example": "TestingPassword17!"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/log-in": {
      "post": {
        "description": "This endpoint will be available when implementing the OAuth",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/update/{user_id}": {
      "put": {
        "description": "This endpoint will update an user, you can update all the info or just specific info",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "AnyTest"
                },
                "lastName": {
                  "example": "AnyTest"
                },
                "birthday": {
                  "example": "2000-01-01"
                },
                "email": {
                  "example": "avalidemail@email.com"
                },
                "phoneNumber": {
                  "example": "505 12345678"
                },
                "password": {
                  "example": "TestingPassword17!"
                }
              }
            }
          }
        ],
        "responses": {
          "404": {
            "description": "user not found"
          },
          "200": {
            "description": "updated"
          }
        }
      }
    },
    "/users/delete/{user_id}": {
      "delete": {
        "description": "This endpoint is for deleting an user from the database",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "404": {
            "description": "user not found"
          },
          "200": {
            "description": "deleted"
          }
        }
      }
    },
    "/meals/{user_id}/get-all-meal-plans": {
      "get": {
        "description": "This endpoint will get you all the meal plans for an specific user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/meals/{meal_plan_id}": {
      "get": {
        "description": "This endpoint will get and specific meal plan by id",
        "parameters": [
          {
            "name": "meal_plan_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/meals/{user_id}/create": {
      "post": {
        "description": "You can use this endpoint for creating a new meal plan for an user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "mealPlan_name": {
                  "type": "string",
                  "example": "Balanced Tuesday Meals"
                },
                "meals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "meal_name": {
                        "type": "string",
                        "example": "Grilled Chicken Salad"
                      },
                      "ingredients": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        },
                        "example": {
                          "grilled chicken breast": "200g",
                          "mixed greens": "1 cup",
                          "cherry tomatoes": "5",
                          "cucumber": "1/2",
                          "avocado": "1/2",
                          "olive oil": "1 tbsp",
                          "balsamic vinegar": "1 tbsp"
                        }
                      },
                      "nutrition_info": {
                        "type": "object",
                        "properties": {
                          "fat": {
                            "type": "string",
                            "example": "25g"
                          },
                          "protein": {
                            "type": "string",
                            "example": "40g"
                          },
                          "carbohydrates": {
                            "type": "string",
                            "example": "10g"
                          },
                          "total_kcal": {
                            "type": "string",
                            "example": "800kcal"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Bad Request"
          },
          "201": {
            "description": "created"
          }
        }
      }
    },
    "/meals/update/{meal_plan_id}/": {
      "put": {
        "description": "With this endpoint you can update a meal plan for an user",
        "parameters": [
          {
            "name": "meal_plan_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "mealPlan_name": {
                  "type": "string",
                  "example": "Balanced Tuesday Meals"
                },
                "meals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "meal_name": {
                        "type": "string",
                        "example": "Grilled Chicken Salad"
                      },
                      "ingredients": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        },
                        "example": {
                          "grilled chicken breast": "200g",
                          "mixed greens": "1 cup",
                          "cherry tomatoes": "5",
                          "cucumber": "1/2",
                          "avocado": "1/2",
                          "olive oil": "1 tbsp",
                          "balsamic vinegar": "1 tbsp"
                        }
                      },
                      "nutrition_info": {
                        "type": "object",
                        "properties": {
                          "fat": {
                            "type": "string",
                            "example": "25g"
                          },
                          "protein": {
                            "type": "string",
                            "example": "40g"
                          },
                          "carbohydrates": {
                            "type": "string",
                            "example": "10g"
                          },
                          "total_kcal": {
                            "type": "string",
                            "example": "800kcal"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Bad Request"
          },
          "200": {
            "description": "updated"
          }
        }
      }
    },
    "/meals/delete/{meal_plan_id}": {
      "delete": {
        "description": "Use this endpoint for deleting an entire meal plan for an user",
        "parameters": [
          {
            "name": "meal_plan_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  }
}
